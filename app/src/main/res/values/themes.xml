<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/mulish_700</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="fontFamily">@font/mulish_700</item>
        <item name="boxStrokeColor">@color/p1</item>
        <item name="android:textColorHint">@color/p1</item>
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusTopEnd">1dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/p1</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextTextAppearance">@style/HelperTextTextAppearance</item>
        <item name="helperTextTextColor">@color/p1</item>
    </style>

    <style name="HelperTextTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/mulish_600</item>
    </style>

    <style name="TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/mulish_700</item>
        <item name="android:textColor">@color/p2</item>
    </style>
</resources>